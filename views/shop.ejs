<%- include('includes/head.ejs') %>

    <%- include('includes/navigation.ejs') %>        
    <section class="section-products">
    <div class="container">
    <div class="row">
    <% if (prods.length > 0) { %>

    <% for (let product of prods) { %>

        <div class="col-12 col-sm-12 col-md-3 col-lg-3">
            <div class="card" style="width: 100%;font-size: 70% !important;">
            <div class="card-header">Header</div>
            <div class="card-body">
                <img class="card-img-top" src="https://dummyimage.com/600x400/000/fff" alt="Card image">
                <div class="card-body">
                    <h4 class="card-title text-center"><%= product.title %></h4>
                    <p class="card-text text-center">Some example text.</p>
                    <a href="#" class="btn btn-primary" style="width: 100%;font-size: 90% !important;">ADD TO CART</a>
                </div>                        
            </div> 
            <div class="card-footer">Footer</div>
            </div>
        </div>
    <% } %>
    <% } else { %>
        <div class="col-12"><h5>No Products Found!</h5></div>
    <% } %>
    </div>
    </div>

    </section>
<%- include('includes/end.ejs') %>