<% if (successMessage.length > 0){ %>
  <div class="container" style="margin-top: 150px;">
    <div class="row">
      <div class="col-12">
          <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong>Success!</strong> <%= successMessage %>.
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
      </div>
    </div>
  </div>
  
<% } 

if (errorMessage.length > 0){ 
  
%>
<div class="container" style="margin-top: 150px;">
<div class="row">
  <div class="col-12">
      <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
          <% 
          for (let err of errorMessage) { 
          %>
          <strong>Error!</strong> <%= err.msg %>.<br>
          <% } %>  
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
  </div>
</div>
</div>

<% 

} 

%>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
        <i class="fas fa-sign-in-alt" style="font-size: 200%;margin-top: 30px;"></i>
    </div>

    <!-- Login Form -->
    <form action="/signup" method="POST">
      <input type="text" id="email" class="fadeIn second" name="email" placeholder="Email" value="<%= oldInput.email %>">
      <input type="password" id="password" class="fadeIn third" name="password" placeholder="password" value="<%= oldInput.password %>">
      <input type="password" id="confirmpassword" class="fadeIn third" name="confirmpassword" placeholder="Confirm password" value="<%= oldInput.confirmpassword %>">      
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="submit" class="fadeIn fourth" value="Sign Up">
    </form>
   <!-- Remind Passowrd -->
   <div id="formFooter">
    <div style="width: 100%;margin-top: 20px;">
        <a class="btn btn-outline-primary" href="/login">Login</a>
      </div>
  </div>

  </div>
</div>


<%- include('../includes/end.ejs') %>